        },
        {
          "type": "select",
          "id": "collection_tag",
          "label": "Collection Key",
          "default": "infant",
          "options": [
            { "value": "infant", "label": "Infant" },
            { "value": "boys", "label": "Boys" },
            { "value": "girls", "label": "Girls" },
            { "value": "new_arrivals", "label": "New Arrivals" }
          ]
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "ShopKids",
      "blocks": []
    }
  ]
}
{% endschema %}
