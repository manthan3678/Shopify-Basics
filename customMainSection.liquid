  color: #000;
}

.bk-right {
  position: relative;
  overflow: hidden;
}
.bk-slider-container {
  display: flex;
  gap: 25px;
  overflow-x: auto;
  scroll-behavior: smooth;
  padding-bottom: 10px;
}
.bk-slider-container::-webkit-scrollbar {
  display: none;
}

.bk-product {
  min-width: 280px;
  flex: 0 0 38%;
  text-align: center;
  border-radius: 0px;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.bk-img-wrap {
  position: relative;
  overflow: hidden;
  flex: 1;
}
.bk-img-wrap img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.3s ease;
}
.bk-img-wrap:hover img {
  transform: scale(1.05);
}
.bk-badge {
  position: absolute;
  top: 10px;
  left: 10px;
  font-size: 1.4rem;
  font-family: 'CooperHewittMedium', sans-serif !important;
  color: #fff;
  padding: 5px 14px;
  clip-path: polygon(0 0, 85% 0, 100% 50%, 85% 100%, 0 100%);
  text-transform:uppercase;
}
.bk-quick {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: #FFD273;
  padding: 10px;
  font-size: 1.6rem;
  font-family: 'CooperHewittMedium', sans-serif !important;
  transform: translateY(100%);
  transition: transform 0.3s ease;
  opacity: 0;
  color: #404041;
  cursor:pointer;
}
.bk-img-wrap:hover .bk-quick {
  transform: translateY(0);
  opacity: 1;
}
.bk-prod-title {
  font-size: 2.4rem;
  font-family: 'CooperLTBTLight', sans-serif !important;
  margin-top: 15px;
  margin:0;
}
.bk-price {
  font-size: 2rem;
  font-family: 'Trebuchet MS';
  margin:0px;
}

.bk-arrow {
  position: absolute;
  top: 40%;
  z-index: 10;
  font-size: 2.4rem;
  background: #fff;
  border: none;
  cursor: pointer;
  padding: 8px 12px;
  border-radius: 50%;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.2);
}
.bk-arrow.left { left: 10px; }
.bk-arrow.right { right: 10px; }
  
