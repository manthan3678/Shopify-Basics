.bk-grid {
  display: grid;
  grid-template-columns: 1fr 2.5fr;
  gap: 30px;
  align-items: stretch;
  padding:1.5rem 0rem 2rem 5rem;
}

.bk-image-box {
  position: relative;
  height: 100%;
}
.bk-image-box img {
  width: 100%;
  height:98%;
  object-fit: cover;
  border-radius: 0px;
}
.bk-view-btn {
  position: absolute;
