    },
    {
      "type": "url",
      "id": "button_link",
      "label": "View All Button Link"
    }
  ],
  "blocks": [
    {
      "type": "product_block",
      "name": "Product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Select Product"
        },
        {
          "type": "text",
          "id": "badge",
          "label": "Badge Text"
        },
