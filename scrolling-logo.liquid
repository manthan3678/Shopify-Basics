                  {% if block.settings.logo_list_link != blank %}
                    <a
                      {% if block.settings.open_new_tab %}
                        target="_blank"
                      {% endif %}
                      href="{{ block.settings.logo_list_link }}"
                    >
                      {{ block.settings.marquee_logo_image | image_url: width: 600 | image_tag: loading: 'lazy' }}
                    </a>
                  {% else %}
