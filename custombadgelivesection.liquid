    },
    {
      "type": "color",
      "id": "blocksy-trust-heading_color",
      "label": "Heading Color",
      "default": "#000000"
    },
    {
      "type": "header",
      "content": "Block Setting"
    },
    {
      "type": "color",
      "id": "blocksy-trust-block_bg",
      "label": "Block Background Color",
      "default": "#ffffff"
    },
    {
      "type": "range",
