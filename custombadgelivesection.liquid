        {
          "type": "color",
          "id": "trust-block-desc_color",
          "label": "Description Color",
          "default": "#444444"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Blocksy • Trust Badges",
      "category": "Custom",
      "blocks": [
        { "type": "feature" },
        { "type": "feature" },
        { "type": "feature" },
        { "type": "feature" }
