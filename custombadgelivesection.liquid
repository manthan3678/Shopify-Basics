      "min": 0,
      "max": 100,
      "step": 1,
      "default": 0
    },
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "blocksy-trust-icon",
          "label": "Icon/Image"
        },
        {
          "type": "header",
          "content": "Heading"
        },
        {
          "type": "text",
          "id": "blocksy-trust-block-title",
          "label": "Title",
          "default": "Free Shipping Over $99"
        },
        {
          "type": "number",
          "id": "trust-block-heading_font_size",
          "label": "Font Size",
          "default": 20
        },
        {
          "type": "color",
          "id": "trust-block-title_color",
