<style>
  .man-announcement-bar-{{ section.id }} {
    width: 100%;
    background-color: {{ section.settings.announcement_bar_bg_color }};
    padding:1rem 0rem;
  }
  .man-announcement-bar-inner{
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .man-announcement-bar-{{ section.id }} .left-icons {
    display: flex;
    gap: 16px;
    align-items: center;
  }
  .man-announcement-bar-{{ section.id }} .left-icons a {
    text-decoration: none;
    display: flex;
    align-items: center;
  }

  .man-announcement-bar-{{ section.id }} .center-slider {
   overflow:hidden;
   max-width:50%;
   color:#fff;
  }
  .man-announcement-bar-{{ section.id }} .center-slider .announcement-slider-text{
   font-size:{{ section.settings.announcement_bar_text_size }}px;
   font-weight:400;
   color:{{ section.settings.announcement_bar_text_color }};
  }

  .blocksy-announcment-next-btn-{{ section.id }}, .blocksy-announcment-prev-btn-{{ section.id }} {
     color:{{ section.settings.announcement_slider_arrows-color }} !important;
     display:flex !important;
  }
  .blocksy-announcment-prev-btn-{{ section.id }}:after, .blocksy-announcment-next-btn-{{ section.id }}:after {
    font-family: swiper-icons;
    font-size:10px !important;
    text-transform: none !important;
    letter-spacing: 0;
    font-variant: initial;
    line-height: 1;
    color:{{  section.settings.announcement_slider_arrows-color }};
  }
  .man-announcement-bar-{{ section.id }} .swiper {
    width: 100%;
    text-align: center;
  }
  .man-announcement-bar-{{ section.id }} .right-selectors {
    display: flex;
    align-items: center;
    gap: 15px;
  }

  .man-announcement-bar-{{ section.id }} select {
    background: transparent;
    border: none;
    color: {{section.settings.announcement_bar_text_color}};
    font-size: {{section.settings.country_and_language_size}}px;
    cursor: pointer;
  }
  .man-announcement-bar-{{ section.id }} select option{
    color:black;
  }
  .left-icons a svg{
    height:16px;
    width:16px;
  }
  .man-announcement-bar-{{ section.id }} select:focus-visible {
    outline: none;
    outline-offset: 0;
    box-shadow: none;
  }
  @media screen and (max-width:990px){
    .man-announcement-bar-{{ section.id }} .left-icons{
      display:none;
    }
    .man-announcement-bar-{{ section.id }} .right-selectors{
      display:none;
    }
    .man-announcement-bar-{{ section.id }} .center-slider{
      max-width:100%;
    }
  }
</style>

