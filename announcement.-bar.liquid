                <path d="M9.17458 1.03139C8.07967 0.930857 6.97605 1.07251 5.94202 1.4463C4.90799 1.82009 3.96888 2.41686 3.19133 3.19426C2.41379 3.97167 1.81684 4.91066 1.44286 5.94463C1.06888 6.97859 0.927026 8.08219 1.02736 9.17712C1.3378 12.742 4.254 15.6582 7.81884 15.9686C8.91389 16.0692 10.0177 15.9275 11.0518 15.5536C12.086 15.1797 13.0251 14.5828 13.8027 13.8052C14.5803 13.0277 15.1772 12.0885 15.5511 11.0543C15.9249 10.0202 16.0666 8.91642 15.9661 7.82137C15.6556 4.25729 12.7394 1.34108 9.17458 1.02989V1.03139Z" stroke="{{ section.settings.announcement_bar_text_color }}"/>
                <path d="M1.75 5.0957L5.31183 7.7502L6.19517 6.00753L9.70901 5.13019L10.7483 1.00146" stroke="{{ section.settings.announcement_bar_text_color }}"/>
              </svg>
              <select class="blocksy_announcement-country-selector" name="country_code" onchange="this.form.submit()">
                {% for country in localization.available_countries %}
                  <option
                    value="{{ country.iso_code }}"
                    {% if country.iso_code == localization.country.iso_code %}
                      selected
                    {% endif %}
                  >
                    {{ country.iso_code }} - {{ country.currency.iso_code | downcase }}
                  </option>
                {% endfor %}
              </select>
            </div>
          {% endform %}
        {% endif %}

        {% if section.settings.show_language_selector %}
          {% form 'localization', id: 'LanguageSelectorForm' %}
            <select name="locale_code" onchange="this.form.submit()">
              {% for language in localization.available_languages %}
                <option
                  value="{{ language.iso_code }}"
                  {% if language.iso_code == localization.language.iso_code %}
                    selected
                  {% endif %}
                >
                  {{ language.endonym_name }}
                </option>
              {% endfor %}
            </select>
          {% endform %}
        {% endif %}
      </div>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
<script>
  document.addEventListener('DOMContentLoaded', function () {
    new Swiper('.man-announcement-bar-{{ section.id }} .swiper', {
      loop: true,
      speed: 900,
      autoplay: {
        delay: 4000,
      },
      navigation: {
        nextEl: '.swiper-button-next',
        prevEl: '.swiper-button-prev',
      },
    });
  });
</script>

