<style>
    .blocksy-testimonial-section-{{ section.id }} {
      position: relative;
      background-size: cover;
      background-position: center;
      padding-top:{{section.settings.testimonials_padding_top}}px;
      padding-bottom:{{section.settings.testimonials_padding_bottom}}px;
      margin-top:{{section.settings.testimonials_margin_top}}px;
      margin-bottom:{{section.settings.testimonials_margin_bottom}}px;
      color: #fff;
      min-height:var(--testimonial-section-height);
    }
    .blocksy-testimonial-section-{{ section.id }}::after {
      content:'';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color:var(--testimonial-section-opacity-color);
      opacity: var(--testimonial-section-opacity);
      z-index: 1;
    }
    /* Swiper Arrow Start  */
    .testimonial-prev-btn-{{ section.id }}, .testimonial-next-btn-{{ section.id }}{
      border: 1px solid #E6E6E6;
      height: 40px !important;
      width: 40px !important;
      border-radius: 50% !important;
      color:var(--testimonial-arrow-color) !important;
      display:flex !important;
    }
    .testimonial-prev-btn-{{ section.id }}:after, .testimonial-next-btn-{{ section.id }}:after {
      font-family: swiper-icons;
      font-size: 18px !important;
      font-weight:700;
      text-transform: none !important;
      letter-spacing: 0;
      font-variant: initial;
      line-height: 1;
      color:var(--testimonial-arrow-color) !important;
    }
    .testimonial-pagination-{{ section.id }} .swiper-pagination-bullet-active {
      opacity: var(--swiper-pagination-bullet-opacity, 1);
      background: var(--testimonial-pagination-dots-color, var(--slider-dots-color)) !important;
    }
    .testimonial-swiper-{{ section.id }} .swiper-wrapper{
      padding-bottom:6rem;
    }
    .testimonial-pagination-{{ section.id }} .swiper-pagination-bullet {
      background:lightgray;
    }
    /* Swiper Arrow End */
    .blocksy-testimonial-inner {
      position: relative;
      z-index: 10;
      margin: 0 auto;
    }
    .blocksy-testimonial-inner .blocksy-testimonials-heading-section{
      text-align:var(--testimonial-text-alignment);
    }
    .blocksy-testimonial-subheading {
      font-size: var(--testimonials-subheading-font-size);
      color: var(--testimonials-subheading-color);
      margin-bottom: 0.5rem;
    }
    .blocksy-testimonial-heading {
      font-size: var(--testimonials-heading-font-size);
      color: var(--testimonials-heading-color);
      margin-bottom: 2rem;
    }
    .blocksy-testimonial-description{
      font-size: var(--testimonials-description-size);
      color: var(--testimonials-description-color);
      margin-bottom: 2rem;
    }

    .blocksy-testimonial-wrapper{
      padding: 0 5rem;
    }
    .blocksy-testimonial-cards{
      text-align:center;
      {%  if section.settings.testimonial_show_border == true %}
        border-right:1px solid #ffffff;
      {% endif %}
    }
    .blocksy-testimonial-cards .blocksy-testimonial-star svg{
      height:20px !important;
      width:20px !important;
      fill: var(--blocksy-testimonial-star-color);
    }

    .blocksy-testimonial-block-author img {
      width: {{ section.settings.testimonial-block-author-image-height }}px;
      height: {{ section.settings.testimonial-block-author-image-height }}px;
      border-radius: 50%;
      object-fit:cover;
    }
    .blocksy-testimonial-block-author .placeholder-img{
      width: {{ section.settings.testimonial-block-author-image-height }}px;
      height: {{ section.settings.testimonial-block-author-image-height }}px;
      border-radius: 50%;
      object-fit:cover;
    }

    .blocksy-testimonial-cards .blocksy-testimonial-block-content{
      font-size:var(--blocksy-testimonial-block-content-font-size);
      color:var(--blocksy-testimonial-block-content-color);
      line-height: 40px;
      margin:20px 0px;
    }
    .blocksy-testimonial-block-author .blocksy-testimonial-author-name .blocksy-testimonial-author-location{
      font-size:var(--blocksy-testimonial-block-author-location-size);
      color:var(--blocksy-testimonial-block-author-location-color);
    }
    .blocksy-testimonial-block-author .blocksy-testimonial-author-name .blocksy-testimonial-author-name-strong{
      font-size: var(--blocksy-testimonial-block-author-font-size);
      color: var(--blocksy-testimonial-block-author-color);
    }
  @media screen and (max-width:1024px){
    .blocksy-testimonial-section-{{ section.id }} {
      min-height:var(--testimonial-section-tablet-height);
    }
    .blocksy-testimonial-subheading {
      font-size: 16px;
    }
    .blocksy-testimonial-heading {
      font-size: 4rem;
    }
    .blocksy-testimonial-description{
      font-size: 16px;
    }
    .blocksy-testimonial-wrapper{
      padding: 0 2rem;
    }
    .blocksy-testimonial-cards .blocksy-testimonial-block-content{
      font-size:2rem;
      line-height: 30px;
    }
    .blocksy-testimonial-block-author .blocksy-testimonial-author-name .blocksy-testimonial-author-location{
      font-size:1.4rem;
    }
    .blocksy-testimonial-block-author .blocksy-testimonial-author-name .blocksy-testimonial-author-name-strong{
     font-size:1.88rem;
    }
  }
  @media screen and (max-width:768px){
    .blocksy-testimonial-section-{{ section.id }} {
      min-height: var(--testimonial-section-mobile-height);
    }
    .swiper-button-prev.testimonial-prev-btn-{{ section.id }}{
      left:0;
    }
    .swiper-button-next.testimonial-next-btn-{{ section.id }}{
      right:0;
    }
    .testimonial-prev-btn-{{ section.id }}, .testimonial-next-btn-{{ section.id }}{
      height: 32px !important;
      width: 32px !important;
      border-radius: 50% !important;
    }
    .testimonial-prev-btn-{{ section.id }}:after, .testimonial-next-btn-{{ section.id }}:after {
      font-size: 10px !important;
    }
    .blocksy-testimonial-subheading {
      font-size: 14px;
    }
    .blocksy-testimonial-heading {
      font-size: 2.5rem;
    }
    .blocksy-testimonial-description{
      font-size: 14px;
    }
    .blocksy-testimonial-wrapper{
      padding: 0 1.5rem;
    }
    .blocksy-testimonial-cards{
      border-right:none;
    }

    .blocksy-testimonial-cards .blocksy-testimonial-block-content{
      font-size:1.8rem;
      line-height: 30px;
    }
    .blocksy-testimonial-block-author .blocksy-testimonial-author-name .blocksy-testimonial-author-location{
      font-size:1.2rem;
    }
    .blocksy-testimonial-block-author .blocksy-testimonial-author-name .blocksy-testimonial-author-name-strong{
     font-size:1.66rem;
    }
  }
