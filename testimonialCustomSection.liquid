<div
  class="blocksy-testimonial-section-{{ section.id }}"
  style="
    {% if section.settings.background_image != blank %}
      background-image: url({{ section.settings.background_image | image_url }});
    {% else %}
      background-color: {{ section.settings.background_color }};
    {% endif %}
    --testimonial-section-height:{{section.settings.section_height}}px;
    --testimonial-section-tablet-height:{{ section.settings.testimonial_tablet_height}}px;
    --testimonial-section-mobile-height:{{ section.settings.testimonial_mobile_height }}px;
    --testimonial-section-opacity:{{ section.settings.overlay_opacity }}%;
    --testimonial-section-opacity-color:{{ section.settings.overlay_color}};
    --testimonials-subheading-font-size:{{ section.settings.testimonial-subheading_size }}px;
    --testimonials-subheading-color:{{ section.settings.testimonial-subheading_color }};
    --testimonials-heading-font-size:{{ section.settings.testimonial-heading_size }}px;
    --testimonials-heading-color:{{ section.settings.testimonial-heading_color }};
    --testimonials-description-size:{{ section.settings.testimonial_description_size }}px;
    --testimonials-description-color:{{ section.settings.testimonial_description_color}};
    --testimonial-arrow-color:{{ section.settings.testimonials-arrows-color }};
    --testimonial-pagination-dots-color:{{ section.settings.dot_color }};
    --testimonial-text-alignment:{{ section.settings.testimonial-text-content-alignment}};
    --blocksy-testimonial-star-color:{{ section.settings.testimonial-block-star_color }};
    --blocksy-testimonial-block-content-font-size:{{section.settings.testimonial-block-quote_size}}px;
    --blocksy-testimonial-block-content-color:{{ section.settings.testimonial-block-quote_color }};
    --blocksy-testimonial-block-author-font-size:{{ section.settings.testimonial-block-author_name_size}}px;
    --blocksy-testimonial-block-author-color:{{ section.settings.testimonial-block-author_name_color }};
    --blocksy-testimonial-block-author-location-size:{{ section.settings.testimonial-block-author_location_size }}px;
    --blocksy-testimonial-block-author-location-color:{{section.settings.testimonial-block-author_location_color }};
  "
>
  <div class="blocksy-testimonial-inner">
    <div class="blocksy-testimonials-heading-section">
      {% if section.settings['testimonial-subheading'] != blank %}
        <h6 class="blocksy-testimonial-subheading">{{ section.settings['testimonial-subheading'] }}</h6>
      {% endif %}
      {% if section.settings['testimonials-heading'] != blank %}
        <h2 class="blocksy-testimonial-heading">{{ section.settings['testimonials-heading'] }}</h2>
      {% endif %}
      {% if section.settings['testimonials-description'] != blank %}
        <p class="blocksy-testimonial-description">{{ section.settings['testimonials-description'] }}</p>
      {% endif %}
    </div>
    <div class="blocksy-testimonial-wrapper testimonial-{{ section.id }}">
      <div class="swiper testimonial-swiper-{{ section.id }}">
        <div class="swiper-wrapper">
          {% for block in section.blocks %}
            <div class="swiper-slide">
              <div class="blocksy-testimonial-cards">
                {% if section.settings['testimonial-block-show_stars'] %}
                  <div class="blocksy-testimonial-star">
                    {% for i in (1..block.settings['testimonial-block-star_count']) -%}
                      <svg
