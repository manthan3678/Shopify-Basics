                        	</g>
                        </g>
                        <g>
                        </g>
                        <g>
                        </g>
                        <g>
                        </g>
                        <g>
                        </g>
                        <g>
                        </g>
                        <g>
                        </g>
                        <g>
                        </g>
                        <g>
                        </g>
                        <g>
                        </g>
                        <g>
                        </g>
                        <g>
                        </g>
                        <g>
                        </g>
                        <g>
                        </g>
                        <g>
                        </g>
                        <g>
                        </g>
                      </svg>
                    {%- endfor %}
                  </div>
                {% endif %}
                <div class="blocksy-testimonial-block-content">{{ block.settings['testimonial-block-quote'] }}</div>
                <div class="blocksy-testimonial-block-author">
                  {% if block.settings['testimonial-block-author_image'] != blank %}
                    {{
                      block.settings['testimonial-block-author_image']
                      | image_url: width: 75
                      | image_tag: loading: 'lazy'
                    }}
                  {% endif %}
                  {% if block.settings['testimonial-block-author_name'] != blank %}
                    <div class="blocksy-testimonial-author-name">
                      <strong class="blocksy-testimonial-author-name-strong">
                        {{- block.settings['testimonial-block-author_name'] -}}
                        -
                      </strong>

                      <span class="blocksy-testimonial-author-location">
                        {{- block.settings['testimonial-block-author_location'] }}
                      </span>
                    </div>
                  {% endif %}
                </div>
              </div>
            </div>
          {% endfor %}
        </div>

        {% if section.settings.show_arrows %}
          <div class="swiper-button-prev testimonial-prev-btn-{{ section.id }}"></div>
          <div class="swiper-button-next testimonial-next-btn-{{ section.id }}"></div>
        {% endif %}
        {% if section.settings.show_dots %}
          <div class="swiper-pagination testimonial-pagination-{{ section.id }}"></div>
        {% endif %}
      </div>
    </div>
  </div>
</div>

<!-- Script Section -->
<script src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js"></script>
<script>
  (function () {
    document.addEventListener('DOMContentLoaded', function () {
      var swiper = new Swiper('.swiper.testimonial-swiper-{{ section.id }}', {
        spaceBetween: 10,
        loop: false,
        speed: 600,
        pagination: {
          el: '.swiper-pagination.testimonial-pagination-{{ section.id }}',
          clickable: true,
        },
        navigation: {
          nextEl: '.testimonial-next-btn-{{ section.id }}',
          prevEl: '.testimonial-prev-btn-{{ section.id }}',
        },
        breakpoints: {
          320: {
            slidesPerView: {{ section.settings.testimonial_column_visible_mobile }},
            spaceBetween: 10,
          },
          768: {
            slidesPerView: {{ section.settings.testimonial_column_visible_tablet }},
            spaceBetween: 10,
          },
          1024: {
            slidesPerView: {{ section.settings.testimonial_column_visible_desktop }},
            spaceBetween: 20,
          },
        },
      });
    });
  })();
</script>
<!-- Script Section End -->

