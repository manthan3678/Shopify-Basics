{% style %}
    .blocksy-newsletter-{{ section.id }}{
      position: relative;
      overflow: hidden;
    }

    .blocksy-newsletter-{{ section.id }} .blocksy_newsletter_inner{
      display:grid;
      height:var(--blocksy-newsletter-height);
    }
  
    .blocksy-subscribe-content-{{ section.id }}{
      grid-area:1 / 1;
      display:flex;
      align-items:center;
    }
  
     .blocksy-newsletter-{{ section.id }} .blocksy_newsletter_inner  .blocksy--newsletter-bg-img{
      grid-area:1 / 1;
      display: flex;
      width: 100%;
      height: 100%;
    }
  
     .blocksy-newsletter-{{ section.id }} .blocksy_newsletter_inner  .blocksy--newsletter-bg-img img{
      width: 100%;
      height: var(--blocksy-newsletter-height);
      object-fit: cover;
     }

    .blocksy-newsletter-{{ section.id }} .blocksy_newsletter_inner .blocksy--newsletter-bg-img::after {
      content: "";
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: var(--blocksy-newletter-opacity-color); /* solid black overlay */
      opacity: var(--blocksy-newsletter-img-opacity); /* sets overlay transparency */
      pointer-events: none;
    }

    .blocksy_subscribe_content_main_inner {
      padding-top: {{ section.settings.newsletter_padding_top }}px ;
      padding-bottom:{{section.settings.newletter_padding_bottom}}px;
      padding-inline: 5rem;
    }
  
    .blocksy-subscribe-content-{{ section.id }} .blocksy-subscribe-content-inner {
      position: relative;
      z-index: 2;
      max-width: 800px;
    }

    .blocksy-newsletter-heading {
      font-size:{{section.settings.newsletter-heading-size}}px;
      font-weight: 300;
      margin:2rem 0rem;
      color:{{section.settings.newsletter-heading-color}};
    }

    .blocksy-newsletter-subheading{
      font-size:{{section.settings.newsletter-subheading-font-size}}px;
      color:{{section.settings.newsletter-subheading_font_color}};
    }
  
    .blocksy-newsletter-description {
      font-size: {{section.settings.newsletter-description-size}}px;
      color:{{section.settings.newsletter-description-color}};
      margin-bottom: 5px;
      line-height:30px;
    }

    .blocksy-newsletter-form {
      margin-top: 30px;
    }

    .blocksy-newsletter-form .blocksy_newsletter-form__message{
      margin:2rem 0rem;
      color:white;
      font-size:18px;
    }

    .blocksy-newsletter-form .blocksy_newsletter-form__message .svg-wrapper{
      height:14px;
      width:18px;
    }

    .blocksy-newsletter-form .blocksy_newsletter_inner_div {
      position: relative;
      display: flex;
      align-items: center;
      width: 100%;
      max-width: 800px;
    }

    .blocksy-newsletter-form input[type="email"] {
      padding: 2rem 3rem 1rem 3rem;
      border: none;
      font-size: 20px;
      border-radius: 100px;
      width: 100%;
      height: 76px;
      outline: none;
      box-shadow: none;
      background-color: #fff;
      color: #000;
    }

    .blocksy-newsletter-form .blocksy_field__label {
      position: absolute;
      left: 3rem;
      top: 50%;
      transform: translateY(-50%);
      font-size:20px;
      color: #999;
      pointer-events: none;
      transition: all 0.2s ease;
    }
     
    .blocksy-newsletter-form input[type="email"]:focus + .blocksy_field__label,
    .blocksy-newsletter-form input[type="email"]:not(:placeholder-shown) + .blocksy_field__label {
      top: 15px;
      left:16px;
      font-size: 12px;
      color: #000;
    }

    .blocksy-newsletter-form .blocksy_newsletter_inner_div .blocksy-newsletter-form input[type="email"]:focus-visible {
      outline: none;
      outline-offset:0;
      box-shadow: none;
    }

    .blocksy-newsletter-form button {
      background: {{ section.settings.button_bg }};
      border: none;
      padding: 0 20px;
      margin:0 3.5px;
      height:76px;
      width:76px;
      border-radius:50%;
      cursor: pointer;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .blocksy-newsletter-form button svg {
      fill: {{ section.settings.button_icon_color }};
      width: 22px;
      height: 22px;
    }
     /* Content alignment And Position */
    /* === Position Classes === */
    .newsletter-position_flex-start {
      justify-content: flex-start;
      text-align:start;
    }

    .newsletter-position_center {
      justify-content:center;
      text-align:center;
    }

    .newsletter-position_flex-end {
      justify-content: flex-end;
      text-align:end;
    }
   /* Tablets*/
  @media screen and (max-width: 1100px) {
    .blocksy_subscribe_content_main_inner {
      padding-inline: 3rem;
    }

    .blocksy-newsletter-{{ section.id }} .blocksy_newsletter_inner{
      display:grid;
      height: auto;
      min-height: var(--blocksy-newsletter-tablet-height);
    }
    .blocksy-newsletter-{{ section.id }} .blocksy_newsletter_inner  .blocksy--newsletter-bg-img img{
