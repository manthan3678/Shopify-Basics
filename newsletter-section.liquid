    }
   }
{% endstyle %}

<section
  class="blocksy-newsletter-{{ section.id }}"
  style="
    --blocksy-newsletter-img-opacity:{{ section.settings.newsletter_overlay_opacity }}%;
    --blocksy-newletter-opacity-color:{{ section.settings.newsletter_overlay_color }};
    --blocksy-newsletter-bg-image:{{ section.settings.blocksy_newsletter_bg_image }};
    {% if section.settings.newsletter-bg-height == 'auto' %}
    --blocksy-newsletter-height:{{ section.settings.newsletter-bg-height}};
    {% else %}
    --blocksy-newsletter-height:{{ section.settings.newsletter-bg-height}}px;
    {% endif %}
    --blocksy-newsletter-mobile-height:{{ section.settings.newsletter-bg-mobile-height }}px;
    --blocksy-newsletter-tablet-height:{{ section.settings.newsletter-bg-tablet-height }}px;
  "
>
  <div class="blocksy_newsletter_inner">
    <!-- Image bg -->
    <div
      class="blocksy--newsletter-bg-img"
    >
      {% if section.settings.blocksy_newsletter_bg_image != blank %}
        {{ section.settings.blocksy_newsletter_bg_image | image_url: width: 3000 | image_tag: loading: 'lazy' }}
      {% else %}
        {{ 'hero-apparel-1' | placeholder_svg_tag: 'placeholder-img' }}
      {% endif %}
    </div>
    <!-- Text -->
    <div class="blocksy-subscribe-content-{{ section.id }} blocksy_subscribe_content_main_inner newsletter-position_{{ section.settings.newsletter-text-content-alignment}} newsletter-text-align-{{ section.settings.newsletter-text_alignment }}">
      <div class="blocksy-subscribe-content-inner">
        {% if section.settings['newsletter-subheading'] != blank %}
          <p class="blocksy-newsletter-subheading">{{ section.settings['newsletter-subheading'] }}</p>
        {% endif %}
        {% if section.settings['newsletter-heading'] != blank %}
          <h2 class="blocksy-newsletter-heading">{{ section.settings['newsletter-heading'] }}</h2>
        {% endif %}
        {% if section.settings['newsletter-description'] != blank %}
          <p class="blocksy-newsletter-description">{{ section.settings['newsletter-description'] }}</p>
        {% endif %}

        {%- form 'customer', id: 'ContactFooter', class: 'blocksy-newsletter-form' -%}
          <div class="blocksy_newsletter_inner_div">
            <input type="hidden" name="contact[tags]" value="newsletter">
            <input
              id="blocksy-NewsletterForm--{{ section.id }}"
              type="email"
              name="contact[email]"
              aria-required="true"
              autocorrect="off"
              autocapitalize="off"
              autocomplete="email"
              {% if form.errors %}
                autofocus
                aria-invalid="true"
                aria-describedby="ContactFooter-error"
              {% elsif form.posted_successfully? %}
                aria-describedby="ContactFooter-success"
              {% endif %}
              placeholder=" "
              required
            >
            <label class="blocksy_field__label" for="blocksy-NewsletterForm--{{ section.id }}">
              {{ section.settings.email_placeholder }}
            </label>
            <button
              type="submit"
              class="blocksy_newsletter-form__button blocksy_field__button"
              name="commit"
              id="Subscribe"
              aria-label="{{ 'newsletter.button_label' | t }}"
            >
              {% render 'blocksy-newsletter-button-icon' %}
            </button>
          </div>
          {%- if form.errors -%}
            <small class="blocksy_newsletter-form__message blocksy_form__message" id="blocksy_ContactFooter-error">
              <span class="svg-wrapper">
                {{- 'icon-error.svg' | inline_asset_content -}}
              </span>
              {{- form.errors.translated_fields.email | capitalize }}
              {{ form.errors.messages.email -}}
            </small>
          {%- endif -%}
          {%- if form.posted_successfully? -%}
            <h3
              class="blocksy_newsletter-form__message blocksy_newsletter-form__message--success blocky_form__message"
              id="blocksy_ContactFooter-success"
              tabindex="-1"
              autofocus
            >
              <span class="svg-wrapper">
                {{- 'icon-success.svg' | inline_asset_content -}}
              </span>
              {{- 'newsletter.success' | t }}
            </h3>
          {%- endif -%}
        {%- endform -%}
      </div>
    </div>
  </div>
</section>

