    }
  }
  /* Mobile (â‰¤767px) */
  @media screen and (max-width: 767px) {
    .blocksy-subscribe-content-{{ section.id }}{
      max-width:100%;
    }
    .blocksy_subscribe_content_main_inner {
      padding-inline: 1rem;
    }
    .blocksy-newsletter-template--18855301087428__blocksy_newsletter_HE4yw3 .blocksy_newsletter_inner {
      height: auto;
      min-height: var(--blocksy-newsletter-mobile-height);
    }
    .blocksy-newsletter-{{ section.id }} .blocksy_newsletter_inner  .blocksy--newsletter-bg-img img{
